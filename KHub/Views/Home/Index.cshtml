    <script>
        //start main app
        let controller = {
            components: {
            },
            data: {},
            methods: {
            },
            mounted: function () {

            },
            created: function () {

            }
        };
        console.log('calling vue app');
        console.log(VueApp);
        VueApp.Start(controller);
    </script>

}