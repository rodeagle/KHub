@model IEnumerable<KHub.DAL.Post>

@{
    ViewBag.Title = "K hub";
}

<div class="index-container">

    <div class="pt-3">
        <h2>Most Recent contributions</h2>
    </div>
    <hr />
    <div class="row justify-content-center">

        @if (Model != null)
        {

            @foreach (var item in Model)
            {
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4 col-xl-3">
                    <div class="p-2 border-box">
                        <div class="text-center font-weight-bold pb-2">@item.Title</div>
                        <div class="text-center">
                            <v-icon x-large>
                                extension
                            </v-icon>
                        </div>
                        <div class="pt-3 pb-3 text-center">
                            <v-btn small>
                                <v-icon small>share</v-icon>
                            </v-btn>
                            <v-btn small>
                                <v-icon small>favorite</v-icon>
                            </v-btn>
                            <v-btn small>
                                <v-icon small>playlist_add</v-icon>
                            </v-btn>
                            <v-btn small>
                                <v-icon small>launch</v-icon>
                            </v-btn>
                        </div>
                    </div>
                </div>

            }

        }

    </div>
</div>


